@page
@model SE1611_Group1_Project.Pages.Auth.ChangePasswordModel

@{
    ViewData["Title"] = "ChangePassword";
}

<link href="~/css/profile.css" rel="stylesheet" />

<div class="container rounded bg-white mt-5 mb-5">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="rounded-circle mt-5" width="150" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                    <span>@Model.User.FirstName @Model.User.LastName</span>
                </div>

            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Change Password</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label class="labels">Username</label>
                            <input type="hidden" asp-for="User.UserId" />
                            <select hidden asp-for="User.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                            <input type="hidden" asp-for="User.Phone" />
                            <input type="hidden" asp-for="User.Email" />
                            <input type="hidden" asp-for="User.Address" />
                            <input type="hidden" asp-for="User.City" />
                            <input type="hidden" asp-for="User.State" />
                            <input type="hidden" asp-for="User.Country" />
                            <input type="text" readonly class="form-control" asp-for="User.UserName">
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Old Password</label>
                            <input type="password" class="form-control" name="OldPassword">
                        </div>
                        @if (@Model.MsgError != null)
                        {
                            <div class="col-md-12 mt-3 mb-1">
                                <span class="form-control" style="background-color: red; color:white;">@Model.MsgError</span>
                            </div>
                        }
                        <input hidden name="ComparePassword" value="@Model.User.Password"/>
                        <div class="col-md-12">
                            <label class="labels">New Password</label>
                            <input type="password" class="form-control" asp-for="User.Password">
                        </div>
        
                        @if (@Model.Msg != null)
                        {
                            <div class="col-md-12 mt-3">
                                <span class="form-control" style="background-color: #88e395; color:white;">@Model.Msg</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="text-center"><button class="btn btn-primary" type="submit">Save Change</button></div>

            </div>

        </div>

    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
