@page
@model SE1611_Group1_Project.PromoManager.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-3">
    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <h1>Edit Promo</h1>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Promo.PromoCode" />
                <div class="mb-3">
                    <label asp-for="Promo.PromoValue" class="form-label"></label>
                    <input asp-for="Promo.PromoValue" class="form-control" />
                    <span asp-validation-for="Promo.PromoValue" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Promo.PromoDescribe" class="form-label"></label>
                    <input asp-for="Promo.PromoDescribe" class="form-control" />
                    <span asp-validation-for="Promo.PromoDescribe" class="form-text text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
