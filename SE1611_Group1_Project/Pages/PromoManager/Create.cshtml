@page
@model SE1611_Group1_Project.PromoManager.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="container my-3">
   
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create Promo</h1>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="Promo.PromoCode" class="form-label"></label>
                    <input asp-for="Promo.PromoCode" class="form-control" />
                    <span asp-validation-for="Promo.PromoCode" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Promo.PromoValue" class="form-label"></label>
                    <input asp-for="Promo.PromoValue" class="form-control" />
                    <span asp-validation-for="Promo.PromoValue" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Promo.PromoDescribe" class="form-label"></label>
                    <input asp-for="Promo.PromoDescribe" class="form-control" />
                    <span asp-validation-for="Promo.PromoDescribe" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <a asp-page="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
