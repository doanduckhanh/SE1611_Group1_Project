@page
@model SE1611_Group1_Project.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Staff Registration";
}


<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <p class="fs-2 fw-bold text-center">Staff Registration</p>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                <div class="form-group">
                    <label asp-for="User.FirstName" class="control-label"></label>
                    <input required asp-for="User.FirstName" class="form-control" />
                    <span asp-validation-for="User.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.LastName" class="control-label"></label>
                    <input required asp-for="User.LastName" class="form-control" />
                    <span asp-validation-for="User.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.UserName" class="control-label"></label>
                    <input required asp-for="User.UserName" class="form-control" />
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Password" class="control-label"></label>
                    <input required asp-for="User.Password" class="form-control" />
                    <span asp-validation-for="User.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Address" class="control-label"></label>
                    <input asp-for="User.Address" class="form-control" />
                    <span asp-validation-for="User.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.City" class="control-label"></label>
                    <input asp-for="User.City" class="form-control" />
                    <span asp-validation-for="User.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.State" class="control-label"></label>
                    <input asp-for="User.State" class="form-control" />
                    <span asp-validation-for="User.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Country" class="control-label"></label>
                    <input asp-for="User.Country" class="form-control" />
                    <span asp-validation-for="User.Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Phone" class="control-label"></label>
                    <input required asp-for="User.Phone" class="form-control" />
                    <span asp-validation-for="User.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="User.Email" class="control-label"></label>
                    <input required asp-for="User.Email" class="form-control" />
                    <span asp-validation-for="User.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Role</label>
                    <select asp-for="User.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
            <a class="mt-3" asp-page="Index">Back to List</a>
        </div>
        <div class="col-md-4"></div>
    </div>

</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
