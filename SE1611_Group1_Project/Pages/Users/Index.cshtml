@page
@model SE1611_Group1_Project.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Staff Manager";
}

<div class="container mt-3">
    <p style="float:right">
        <a class="btn btn-primary" asp-page="Create">Create Employee</a>
    </p>
    <h2 style="float:left">
        Employee List
    </h2>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].FirstName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].LastName)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].Address)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].City)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].State)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].Country)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].Phone)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].Email)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.User[0].Role)</th>
                <th scope="col">Account</th>
                <th scope="col">Password</th>
                <th>Action</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.User)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                    <td>
                        <a type="button" asp-page="./Edit" asp-route-id="@item.UserId" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        @if (item.UserId == (ViewData["UserId"] as int?))
                        {
                            <a type="button" style="background-color:red;color:white" asp-page="./Delete" hidden asp-route-id="@item.UserId" class="btn btn-outline-danger">Delete</a>
                        }
                        else
                        {
                            <a type="button" value="Delete" asp-page="./Delete" asp-route-id="@item.UserId" class="btn btn-danger">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



