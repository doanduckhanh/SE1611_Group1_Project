@page
@model SE1611_Group1_Project.Pages.ManagementFoods.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Food</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.FoodPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodImage)
        </dt>
        <dd class="col-sm-10">
            <div class="w-75"><img class="w-50" src="@Model.Food.FoodImage" /></div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.FoodStatus)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Food.FoodStatus == 0)
            {
                <p>Deactived</p>
            }
            else
            {
                <p>Actived</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Food.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Food.Category.CategoryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Food?.FoodId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
