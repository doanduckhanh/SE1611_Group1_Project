@page
@model SE1611_Group1_Project.Pages.ManagementFoods.IndexModel

@{
    ViewData["Title"] = "Index";
}
<div class="container mb-3">
    <h1>Food management</h1>

    <p style="float:right">
        <a class="btn btn-primary" asp-page="Create">New food</a>
    </p>
    <p style="float:left">
        <form method="get">
            @* <input type="text" asp-for="searchInput" placeholder="Search by name" />
            @*   <button class="btn btn-primary" type="submit">Search</button>*@
            <div class="input-group w-25">
                <button type="submit" class="btn btn-outline-secondary">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                    </svg>
                    <span class="visually-hidden">Button</span>
                </button>
                <input type="text" asp-for="searchInput" class="form-control" placeholder="Search by name" aria-label="Input group example" aria-describedby="basic-addon1">
            </div>

            <div class="form-group my-3">
                <select class="col-lg-3 col-md-4" id="category" asp-for="categoryChoose" name="categoryChoose" onchange="this.form.submit()" class="form-control">
                    <option value="0">-- Select a category --</option>
                    @foreach (var c in Model.Category)
                    {
                        <option value="@c.CategoryId">@c.CategoryName</option>
                    }
                </select>
            </div>
        </form>

    </p>
    <div style="background-color:lightgray;border-radius:5px;overflow:hidden">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Food name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Food)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FoodName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FoodPrice)
                        </td>
                        <td>
                            <div style="width:200px"><img class="w-100" src="@item.FoodImage" /></div>
                        </td>
                        <td>
                            @if (item.FoodStatus == 0)
                            {
                                <p style="color:red">Deactived</p>
                            }
                            else
                            {
                                <p style="color:green">Actived</p>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td>
                        <td>
                            <a type="button" class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.FoodId">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"></path>
                                </svg>
                                Edit
                            </a>
                            @* <a asp-page="./Edit" asp-route-id="@item.FoodId">Edit</a>*@
                            @*      <a asp-page="./Details" asp-route-id="@item.FoodId">Details</a> |*@
                            @*                <a asp-page="./Delete" asp-route-id="@item.FoodId">Delete</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
